@using HsqvLogistica.Models.DTOs.Lineas
@using HsqvLogistica.Services
@using HsqvLogistica.Services.Interfaces
@using MudBlazor

<MudDialog>

    <DialogContent>

        <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
            Complete los datos del artículo
        </MudText>

        <MudForm @ref="_form">

            <MudTextField T="string"
                          Label="Descripción"
                          @bind-Value="_descripcion"
                          Required="true"
                          RequiredError="La descripción es obligatoria"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          FullWidth="true" />

        </MudForm>

    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">
            Cancelar
        </MudButton>

        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   OnClick="Save">
            @(_isEditMode ? "Actualizar" : "Guardar")
        </MudButton>
    </DialogActions>

</MudDialog>

@code {

    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public LineaDto? Linea { get; set; }

    [Inject]
    public ILineaService LineaService { get; set; } = default!;

    private MudForm? _form;
    private bool _isEditMode;
    private string _descripcion = string.Empty;

    protected override void OnInitialized()
    {
        if (Linea != null)
        {
            _isEditMode = true;
            _descripcion = Linea.Descripcion ?? string.Empty;
        }
    }

    private async Task Save()
    {
        if (_form is null) return;

        await _form.Validate();
        if (!_form.IsValid) return;

        if (_isEditMode && Linea != null)
        {
            await LineaService.UpdateAsync(
                Linea.Id,
                new LineaUpdateDto { Descripcion = _descripcion }
            );
        }
        else
        {
            await LineaService.CreateAsync(
                new LineaCreateDto { Descripcion = _descripcion }
            );
        }

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
